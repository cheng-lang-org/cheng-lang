# Minimal `Option[T]` for pure Cheng toolchain (compatible with IDE code).
type
    Option[T] =
        has: bool
        value: T
fn some(value: T): Option[T] =
    var opt: Option[T] = Option[T]()
    opt.has = true
    opt.value = value opt
fn none(_: typedesc[T]): Option[T] =
    var opt: Option[T] = Option[T]()
    opt.has = false opt
fn isSome(opt: Option[T]): bool =
    opt.has
fn get(opt: Option[T]): T =
    opt.value
