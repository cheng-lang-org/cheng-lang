# Option None codegen smoke test.

type
    Option[T] =
        has: bool
        value: T
    Wrapper =
        value: int32

fn None(): Option[T] =
    Option[T](has: false)

fn wrap(value: int32): Wrapper =
    Wrapper(value: value)

fn main() =
    let optBool: Option[bool] = None[bool]()
    let optInt: Option[int32] = None[int32]()
    let optStr: Option[str] = None[str]()
    let wrapped: Wrapper = wrap(42)
    optBool
    optInt
    optStr
    wrapped
