# UIR vectorization cost model (phase-1): deterministic conservative scoring.
import backend/uir/uir_types

type
    UirVecCostDecision =
        enable: bool
        width: int32

fn uirDecideVecWidth(module: UirModule, maxWidth: int32): UirVecCostDecision =
    var d: UirVecCostDecision
    d.enable = false
    d.width = 0
    if module == nil:
        return d
    if maxWidth <= 0:
        return d
    d.enable = true
    d.width = maxWidth
    return d
