# SRT runtime constraints template (soft-rt C backend)
# Use 1 for enabled/true, 0 for disabled/false.

# tier1 | tier2
SRT_TIER=tier2

# CPU / scheduling
SRT_CPU_PINNED=0
SRT_DVFS_DISABLED=0
SRT_SCHED_POLICY=normal
SRT_SCHED_PRIORITY=0

# Memory
SRT_MEM_LOCKED=0
SRT_WORKSET_BYTES=0

# Interrupt / IO
SRT_IRQ_BOUND=0
SRT_IO_BOUND_US=5000

# Runtime guards
SRT_WATCHDOG_ENABLED=0
SRT_MAX_JITTER_US=5000
SRT_LATENCY_BUDGET_US=20000
SRT_WCET_BUDGET_US=5000

# Fixed-capacity resources
SRT_RING_CAPACITY=2048
SRT_ARENA_BYTES=16777216

# Soft-rt defaults
SRT_CHENG_MM_ATOMIC=1
SRT_CHENG_MM=orc
